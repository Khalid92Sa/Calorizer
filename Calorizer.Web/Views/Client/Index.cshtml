@model List<Calorizer.Business.DTOs.ClientDto>

@{
    ViewData["Title"] = "Clients";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">Clients</h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add New Client
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Full Name (EN)</th>
                                    <th>Full Name (AR)</th>
                                    <th>Mobile</th>
                                    <th>Date of Birth</th>
                                    <th>Weight (kg)</th>
                                    <th>Height (cm)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var client in Model)
                                    {
                                        <tr>
                                            <td>@client.Id</td>
                                            <td>@client.FullNameEn</td>
                                            <td dir="rtl">@client.FullNameAr</td>
                                            <td>@client.MobileNumber</td>
                                            <td>@client.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                            <td>@client.Weight</td>
                                            <td>@client.Height</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-sm btn-info">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center">No clients found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>