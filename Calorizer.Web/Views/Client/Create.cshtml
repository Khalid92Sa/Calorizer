@model Calorizer.Business.DTOs.ClientDto

@{
    ViewData["Title"] = Model.Id == 0 ? Localizer["CreateClient"] : Localizer["EditClient"];
    var isEdit = Model.Id > 0;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form id="clientForm" asp-action="CreateOrUpdate" method="post">
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullNameEn" class="form-label">@Localizer["FullNameEn"] *</label>
                                <input asp-for="FullNameEn" class="form-control" />
                                <span asp-validation-for="FullNameEn" data-valmsg-for="FullNameEn" class="text-danger field-validation-valid"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="FullNameAr" class="form-label">@Localizer["FullNameAr"]</label>
                                <input asp-for="FullNameAr" class="form-control" dir="rtl" />
                                <span asp-validation-for="FullNameAr" data-valmsg-for="FullNameAr" class="text-danger field-validation-valid"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="MobileNumber" class="form-label">@Localizer["MobileNumber"]</label>
                                <input asp-for="MobileNumber" class="form-control" />
                                <span asp-validation-for="MobileNumber" data-valmsg-for="MobileNumber" class="text-danger field-validation-valid"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="GenderId" class="form-label">@Localizer["Gender"] *</label>
                                <select asp-for="GenderId" class="form-select">
                                    <option value="">@Localizer["SelectGender"]</option>
                                    @foreach (var gender in Model.Genders)
                                    {
                                        <option value="@gender.Id">@gender.NameEn</option>
                                    }
                                </select>
                                <span asp-validation-for="GenderId" data-valmsg-for="GenderId" class="text-danger field-validation-valid"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label">@Localizer["DateOfBirth"] *</label>
                                <input asp-for="DateOfBirth" type="date" class="form-control" />
                                <span asp-validation-for="DateOfBirth" data-valmsg-for="DateOfBirth" class="text-danger field-validation-valid"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Height" class="form-label">@Localizer["Height"] *</label>
                                <input asp-for="Height" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Height" data-valmsg-for="Height" class="text-danger field-validation-valid"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Weight" class="form-label">@Localizer["Weight"] *</label>
                                <input asp-for="Weight" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Weight" data-valmsg-for="Weight" class="text-danger field-validation-valid"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Address" class="form-label">@Localizer["Address"]</label>
                                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Address" data-valmsg-for="Address" class="text-danger field-validation-valid"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <button type="button" class="btn btn-primary" onclick="ClientModule.createOrUpdate()">
                                <i class="bi bi-save"></i> @Localizer["SaveClient"]
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
                            </a>
                        </div>
                    </form>

                    @if (isEdit)
                    {
                        <hr class="my-4" />

                        <!-- Weight History Section -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#weightHistoryCollapse">
                                <h4 class="mb-0">@Localizer["WeightHistory"] <span class="badge bg-secondary">@Model.WeightHistories.Count</span></h4>
                                <i class="bi bi-chevron-down"></i>
                            </div>
                            <div class="collapse" id="weightHistoryCollapse">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>@Localizer["Date"]</th>
                                                <th>@Localizer["Weight"]</th>
                                                <th>@Localizer["Height"]</th>
                                            </tr>
                                        </thead>
                                        <tbody id="weightHistoryBody">
                                            @{
                                                var weightHistories = Model.WeightHistories.Take(5).ToList();
                                            }
                                            @foreach (var item in weightHistories)
                                            {
                                                <tr>
                                                    <td>@item.CreatedOn.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>@item.Weight</td>
                                                    <td>@item.Height</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.WeightHistories.Count > 5)
                                {
                                    <div class="text-center" id="weightHistoryPagination">
                                        <button type="button" class="btn btn-link" onclick="ClientModule.loadMoreWeightHistory()">
                                            <i class="bi bi-chevron-down"></i> @Localizer["ShowMore"]
                                        </button>
                                    </div>
                                }
                                <div class="text-center" id="weightHistoryShowLess" style="display: none;">
                                    <button type="button" class="btn btn-link" onclick="ClientModule.showLessWeightHistory()">
                                        <i class="bi bi-chevron-up"></i> @Localizer["ShowLess"]
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Biochemical Medical Tests Section -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#biochemicalTestCollapse">
                                <h4 class="mb-0">@Localizer["BiochemicalMedicalTests"] <span class="badge bg-secondary">@Model.BiochemicalTests.Count</span></h4>
                                <i class="bi bi-chevron-down"></i>
                            </div>
                            <div class="collapse" id="biochemicalTestCollapse">
                                <div class="row mb-3">
                                    <div class="col-md-10">
                                        <textarea id="newBiochemicalTest" class="form-control" placeholder="@Localizer["EnterMedicalTestData"]" rows="2"></textarea>
                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-success" onclick="ClientModule.addBiochemicalTest()">
                                            <i class="bi bi-plus-circle"></i> @Localizer["AddTest"]
                                        </button>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>@Localizer["Date"]</th>
                                                <th>@Localizer["MedicalData"]</th>
                                                <th>@Localizer["Actions"]</th>
                                            </tr>
                                        </thead>
                                        <tbody id="biochemicalTestBody">
                                            @{
                                                var biochemicalTests = Model.BiochemicalTests.Take(5).ToList();
                                            }
                                            @foreach (var item in biochemicalTests)
                                            {
                                                <tr>
                                                    <td>@item.CreatedOn.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>@item.MedicalData</td>
                                                    <td>
                                                        <button type="button" class="btn btn-sm btn-danger" onclick="ClientModule.deleteBiochemicalTest(@item.Id)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.BiochemicalTests.Count > 5)
                                {
                                    <div class="text-center" id="biochemicalTestPagination">
                                        <button type="button" class="btn btn-link" onclick="ClientModule.loadMoreBiochemicalTests()">
                                            <i class="bi bi-chevron-down"></i> @Localizer["ShowMore"]
                                        </button>
                                    </div>
                                }
                                <div class="text-center" id="biochemicalTestShowLess" style="display: none;">
                                    <button type="button" class="btn btn-link" onclick="ClientModule.showLessBiochemicalTests()">
                                        <i class="bi bi-chevron-up"></i> @Localizer["ShowLess"]
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Drugs/Supplements Section -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#drugsSupplementCollapse">
                                <h4 class="mb-0">@Localizer["DrugsSupplements"] <span class="badge bg-secondary">@Model.DrugsSupplements.Count</span></h4>
                                <i class="bi bi-chevron-down"></i>
                            </div>
                            <div class="collapse" id="drugsSupplementCollapse">
                                <div class="row mb-3">
                                    <div class="col-md-10">
                                        <input type="text" id="newDrugSupplement" class="form-control" placeholder="@Localizer["EnterDrugSupplementName"]" />
                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-success" onclick="ClientModule.addDrugsSupplement()">
                                            <i class="bi bi-plus-circle"></i> @Localizer["Add"]
                                        </button>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>@Localizer["Date"]</th>
                                                <th>@Localizer["DrugSupplement"]</th>
                                                <th>@Localizer["Actions"]</th>
                                            </tr>
                                        </thead>
                                        <tbody id="drugsSupplementBody">
                                            @{
                                                var drugsSupplements = Model.DrugsSupplements.Take(5).ToList();
                                            }
                                            @foreach (var item in drugsSupplements)
                                            {
                                                <tr>
                                                    <td>@item.CreatedOn.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>@item.Drug</td>
                                                    <td>
                                                        <button type="button" class="btn btn-sm btn-danger" onclick="ClientModule.deleteDrugsSupplement(@item.Id)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.DrugsSupplements.Count > 5)
                                {
                                    <div class="text-center" id="drugsSupplementPagination">
                                        <button type="button" class="btn btn-link" onclick="ClientModule.loadMoreDrugsSupplements()">
                                            <i class="bi bi-chevron-down"></i> @Localizer["ShowMore"]
                                        </button>
                                    </div>
                                }
                                <div class="text-center" id="drugsSupplementShowLess" style="display: none;">
                                    <button type="button" class="btn btn-link" onclick="ClientModule.showLessDrugsSupplements()">
                                        <i class="bi bi-chevron-up"></i> @Localizer["ShowLess"]
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Medical History Section -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#medicalHistoryCollapse">
                                <h4 class="mb-0">@Localizer["MedicalHistory"] <span class="badge bg-secondary">@Model.MedicalHistories.Count</span></h4>
                                <i class="bi bi-chevron-down"></i>
                            </div>
                            <div class="collapse" id="medicalHistoryCollapse">
                                <div class="row mb-3">
                                    <div class="col-md-10">
                                        <textarea id="newMedicalHistory" class="form-control" placeholder="@Localizer["EnterMedicalNote"]" rows="2"></textarea>
                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-success" onclick="ClientModule.addMedicalHistory()">
                                            <i class="bi bi-plus-circle"></i> @Localizer["AddNote"]
                                        </button>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>@Localizer["Date"]</th>
                                                <th>@Localizer["MedicalNote"]</th>
                                                <th>@Localizer["Actions"]</th>
                                            </tr>
                                        </thead>
                                        <tbody id="medicalHistoryBody">
                                            @{
                                                var medicalHistories = Model.MedicalHistories.Take(5).ToList();
                                            }
                                            @foreach (var item in medicalHistories)
                                            {
                                                <tr>
                                                    <td>@item.CreatedOn.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>@item.MedicalNote</td>
                                                    <td>
                                                        <button type="button" class="btn btn-sm btn-danger" onclick="ClientModule.deleteMedicalHistory(@item.Id)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.MedicalHistories.Count > 5)
                                {
                                    <div class="text-center" id="medicalHistoryPagination">
                                        <button type="button" class="btn btn-link" onclick="ClientModule.loadMoreMedicalHistory()">
                                            <i class="bi bi-chevron-down"></i> @Localizer["ShowMore"]
                                        </button>
                                    </div>
                                }
                                <div class="text-center" id="medicalHistoryShowLess" style="display: none;">
                                    <button type="button" class="btn btn-link" onclick="ClientModule.showLessMedicalHistory()">
                                        <i class="bi bi-chevron-up"></i> @Localizer["ShowLess"]
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize the ClientModule with client ID and translations
        ClientModule.init(@Model.Id, @Html.Raw(Json.Serialize(Localizer.GetAll())));
    </script>
}
